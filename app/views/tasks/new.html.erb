<div class="container">
<h1>New task</h1>
<%= form_for @task do |f| %>
<div class="form-group">
<%= f.label :title %>
<div class="col-md-8">
<%= f.text_field :title, class: "form-control" %>
</div>
</div>
<div class="form-group">
<%= f.label :details %>
<div class="col-md-8">
<%= f.text_field :details, class: "form-control" %>
</div>
</div>
<%= f.submit :submit, class: 'btn btn-success' %>
<% end %>
</div>
<br>
<button type="button" class="btn btn-outline-primary"><%= link_to 'Back to My Tasks', tasks_path %></button>

